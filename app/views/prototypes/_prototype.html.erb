<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id) %>
  <div class="card__body">
    <%= link_to prototype.filed, prototype_path(:id), class: :card__title%>
    <p class="card__summary">
      <%= link_to prototype.catch_copy, prototype_path(:id) %>
    </p>
    <%= link_to prototype.user.name, new_user_registration_path(:id), class: :card__user %>
  </div>
</div>